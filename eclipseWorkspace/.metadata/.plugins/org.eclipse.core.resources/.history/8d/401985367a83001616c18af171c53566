#include<iostream>
#include<math.h>
#include<iomanip>
using namespace std;
int jieCheng(int n);
float sin(float x);
int main(){

	int r,s;
	cin>>r;
	cin>>s;
	if(r*r<=s*s){
		 cout<<setiosflags(ios::fixed);
		 cout.precision(4);
		cout<<sqrt(sin(r)*sin(r)+sin(s)*sin(s));
	}else{
		 cout<<setiosflags(ios::fixed);
				 cout.precision(4);
		cout<<sin(r*s/2);
	}
return 0;
}



float sin(float x){
float single;
float result=0;
for(int i=1;i<100;i++){
single=((pow(-1,i-1))*(pow(x,(float)2*i-1)))/(jieCheng(2*i-1));
cout<<single<<endl;
result=result+single;
}

return result;
}

int jieCheng(int n){
	int resulT=1;
	for(int i=1;i<=n;i++){
		resulT=resulT*i;
	}
	return resulT;
}
