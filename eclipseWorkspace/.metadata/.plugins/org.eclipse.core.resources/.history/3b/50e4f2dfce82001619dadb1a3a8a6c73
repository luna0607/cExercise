#include<iostream>
using namespace std;
int main(){
	int dec;
	cin>>dec;
	char bin[100];
	int counter=100;
	if(dec>0){
		while(dec>0){
	if(dec%2==0){
		bin[counter]=0;
		counter--;
		dec=dec/2;
	}else{
		bin[counter]=1;
		counter--;
		dec=(dec-1)/2;
	}
	}
		for(int i=counter;i<100;i++){
			cout<<bin[i];
		}
	}
	return 0;
}
